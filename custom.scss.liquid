@mixin prefix($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      -webkit-#{$property}: $value;
    } @else if $prefix == moz {
      -moz-#{$property}: $value;
    } @else if $prefix == ms {
      -ms-#{$property}: $value;
    } @else if $prefix == o {
      -o-#{$property}: $value;
    } @else if $prefix == spec {
      #{$property}: $value;
    } @else  {
      @warn "Unrecognized prefix: #{$prefix}";
    }
  }
}

// Display flex
@mixin d-fb {
	display: -webkit-box;  /* OLD - iOS 6-, Safari 3.1-6, BB7 */
	display: -ms-flexbox;  /* TWEENER - IE 10 */
	display: -webkit-flex; /* NEW - Safari 6.1+. iOS 7.1+, BB10 */
	display: flex;         /* NEW, Spec - Firefox, Chrome, Opera */
 	-webkit-box-sizing:border-box;
 	box-sizing:border-box;
}
.d-fb {@include d-fb;}

@function flex-value( $value ) {
	@if str-index( $value, "flex-" ) == 1 {
		$value : str-slice( $value, 6 );
	}
	@return $value;
}

@mixin flex($value) {
	-webkit-flex:$value;
	-moz-box-flex:$value;
	-ms-flex:$value;
	flex:$value;
}

@mixin flex-wrap($value) {
	-ms-flex-wrap: $value;
	-webkit-flex-wrap: $value;
	flex-wrap: $value;
}

@mixin flex-direction($value) {
	-ms-flex-direction: $value;
	-webkit-flex-direction: $value;
	flex-direction: $value;
}

@mixin justify-content($value) {
	-webkit-box-pack: flex-value($value);
	-moz-box-pack: flex-value($value);
	-ms-flex-pack: flex-value($value);
	-webkit-justify-content: $value;
	justify-content: $value;
}

@mixin align-items($value) {
	-webkit-box-align: flex-value($value);
	-moz-box-align: flex-value($value);
	-ms-flex-align: flex-value($value);
	-webkit-align-items: $value;
	align-items: $value;
}
@mixin align-self($value) {
	-ms-flex-item-align: flex-value($value);
	-webkit-align-self: $value;
	align-self: $value;
}
@mixin align-content($value) {
	-ms-flex-line-pack: flex-value($value);
	-webkit-align-content: $value;
	align-content: $value;
}

