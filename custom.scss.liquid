$filter-padding-horz : 5px;

.hc-plp-filters {
  	position: relative;
  	z-index:3000;
  	margin-bottom: 20px;
  
  .hc-plp-filters-inner {
  	display:block;
    position:relative;
    width:100%;

    padding:0;
  }
  
  	&, * {
  		font-family: 'Source Sans Pro', sans-serif;
    	font-weight: 400;
    	text-transform: uppercase !important;
    	letter-spacing: 0.1em;
  		font-size: 12px;
  		color: #666666;
  	}
  
  	.hc-plp-filter-header {
  		text-decoration: underline;
      	padding: 5px 0;
  	}
  
  	.hc-plp-filter-buttons-wrap {
      	position: relative;
      	z-index: 3000;
      	transition: all 0.3s ease;
      	text-align: center;
      	width: 100%;
      
      	.hc-plp-active-filters,
      	.hc-plp-filter-controls {
      		width: 100%;
      	}
  	}
  
  	.hc-plp-filter-wrap {
      	position: absolute;
      	top: 100%;
      	width: 100%;
      	background-color: rgba(255,255,255,0.95);
      	padding: 10px $filter-padding-horz;
      	display: none;
      
  		.hc-plp-filter-color,
  		.hc-plp-filter-size {
      		display: inline-block;
      		vertical-align: top;
  		}
      
      .hc-plp-filter-color {
      	margin-left: 60px;
      }
      
      .hc-plp-filter-size {
      	    
        margin-bottom:10px;
      }
  	}
  
  	#hc-plp-clear-filters,
  	#hc-plp-show-filters {
      cursor:pointer;
      padding:$filter-padding-horz;
      display:inline-block;
  		color:#444444;
      //transition:all 0.3s ease;
      
      &:hover {
      	color:#000000;
      }
      
  	}
  #hc-plp-show-filters {
    position:relative;
    width:105px;
    margin-right: 5px;
    
  	&:after {
    	content:'<';
        font-family: 'icons';
      	font-size: 16px;
      	position: absolute;
      	right: -8px;
      	line-height: 7px;
      	top:9px;
      	transition:all 0.2s ease;
    }
    
    &.filters-showing:after {
      	  
      -webkit-transform: rotate(180deg);
      -ms-transform: rotate(180deg); /* IE 9 */
       
      transform: rotate(180deg);
      top:10px;
      
      -webkit-transform-origin:center center;
      -moz-transform-origin:center center;
      -ms-transform-origin:center center;
      -o-transform-origin:center center;
      transform-origin:center center;
		
    }
  }
  
/*   #hc-plp-clear-filters {
	float:right;
  } */
  
  	.hc-plp-filter-controls,
  	.hc-plp-active-filters {
      	padding: 0;
  		//display: block !important;
      	position: relative;
      	margin: 10px 0 0 0;
      
      	li {
          	margin: 2px;
          	border: 1px solid #eee;
      		display: inline-block;
          	padding: 2px $filter-padding-horz 3px;
          
          	.hc-plp-remove-filter {
          		font-weight: bold;
              	cursor: pointer;
              	margin-left: 7px;
          	}
      	}
  	}
  
  .hc-plp-active-filters {
    //display:none !important;
  }
  
  	input[type="checkbox"] {
  		display: none;
      
      	&:checked + label {
          	// color: #FFFFFF;
          	// background-color:rgba(0,0,0,1);
          	font-weight: bold;
      	}
  	}
  
  	label {
      	padding: 3px 0;
  		display: block;
    	color: #000000;
      	transition: all 0.3s ease;
      	margin-bottom:3px;
      	font-size:12px;
  	}
}


